<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.ableandroid.materialmotion"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AwareActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".IntentionalStartActivity"
            android:label="Intentional"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".IntentionalEndActivity"
            android:label="Intentional"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".PlaygroundActivity"
            android:label="Interpolator Playground"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".NaturalMotionActivity"
            android:label="Natural Motion"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".TouchFeedbackActivity"
            android:label="Touch Feedback"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>