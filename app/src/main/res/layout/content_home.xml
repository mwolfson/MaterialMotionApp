<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HomeActivity">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/matmotion_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/mater_motion_sentence"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

            <TextView
                android:id="@+id/matmotion_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/mater_mation_characteristics"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/matcharac_layout1"
                    android:layout_width="0dp"
                    android:layout_height="216dp"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_selector"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:stateListAnimator="@animator/raise">

                    <TextView
                        android:id="@+id/matcharac_title1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="@string/responsive"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

                    <TextView
                        android:id="@+id/matcharac_text1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mat_charac_responsive"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:transitionName="@string/trans_charac1"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/matcharac_layout2"
                    android:layout_width="0dp"
                    android:layout_height="216dp"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_selector"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:stateListAnimator="@animator/raise">


                    <TextView
                        android:id="@+id/matcharac_title2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="@string/aware"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

                    <TextView
                        android:id="@+id/matcharac_text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mat_charac_aware"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:transitionName="@string/trans_charac2"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/matcharac_layout3"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_selector"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:stateListAnimator="@animator/raise">

                    <TextView
                        android:id="@+id/matcharac_title3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="@string/natural"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

                    <TextView
                        android:id="@+id/matcharac_text3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mat_charac_natural"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:transitionName="@string/trans_charac3"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/matcharac_layout4"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_selector"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:stateListAnimator="@animator/raise">


                    <TextView
                        android:id="@+id/matcharac_title4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="@string/intentional"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

                    <TextView
                        android:id="@+id/matcharac_text4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mat_charac_intentional"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:transitionName="@string/trans_charac4"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/matmotion_learnmoresubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Link to the official specification, or view the introduction video to learn more"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

            <TextView
                android:id="@+id/matmotion_learnmorelink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="https://material.google.com/motion"
                android:gravity="center_horizontal"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

            <ImageView
                android:id="@+id/mat_motion_vid"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:scaleType="centerInside"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:src="@drawable/mat_motion_vid"/>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>

